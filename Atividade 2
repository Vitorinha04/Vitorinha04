// Seção de Declarações das variáveis
terra: real
início
// Seção de Comandos, procedimentos, funções, operadores, etc...
escreval ("digite o numero")
  leia (terra)
  espelel ("o número digitado e : ", terra , "seu antecessor e : " , terra-1)
  escreval ("o sucessor e:",terra+1)

